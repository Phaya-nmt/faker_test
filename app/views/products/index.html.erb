<p id="notice"><%= notice %></p>

<h1>Listing Products</h1>
<%= paginate @products, views_prefix: :products %>
<!-- ここでkaminariのカスタム版pagineteを読んでいる -->


<div class="infinite-table"><!-- ここから無限ループ開始 -->

  <table>
    <thead>
      <tr>
        <th>name:</th>
        <th>description:</th>
        <th>price:</th>
        <th>image:</th>
        <th colspan="3"></th>
      </tr>
    </thead>

    <tbody>
    <%= render :partial => 'products', :object => @products %>
      <% @products.each do |product| %>
        <tr>
          <td><%= product.name %></td>
          <td><%= product.description %></td>
          <td><%= product.price %></td>
          <td><%= image_tag(product.image, class: 'thumb') %></td>
          <td><%= link_to 'Show', product %></td>
          <td><%= link_to 'Edit', edit_product_path(product) %></td>
          <td><%= link_to 'Destroy', product, method: :delete, data: { confirm: 'Are you sure?' } %></td>
        </tr>
      <% end %>
    </tbody>
  </table>

  <p class="pagination">
    <%= link_to_next_page(@products, 'Next Page', :remote => true) %>
  </p>


</div><!-- ここまで無限ループ開始 -->
